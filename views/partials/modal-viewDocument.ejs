<!-- Admin View -->
<!-- Modal for View Document -->

<!-- Start Modal Template -->
<script type="text/ng-template" id="viewDocument.html">
<div tabindex="-1" id="imgEditModal_{{modalOptions.photo}}_{{modalOptions.mediaSet}}">
<div class="modal-header">
  <button type="button" class="close" data-ng-click="modalOptions.close()" aria-hidden="true">Close</button>
  <h3>{{modalOptions.headerText}}</h3>
</div>
<div class="modal-body">
				<div ng-if="modalOptions.photo.fileExtentions != '.pdf'">
					<iframe ng-src="{{modalOptions.photo.mediaUrl | docIframeUrl}}" width="100%" height="600" ></iframe>
				</div>
				<div ng-if="modalOptions.photo.fileExtentions =='.pdf'">
					<object data="{{modalOptions.photo.mediaUrl}}" type="application/pdf" width="100%" height="600">
					  <p>It appears you dont have a PDF plugin for this browser.
					  No biggie... you can <a href="{{modalOptions.photo.mediaUrl}}">click here to
					  download the PDF file.</a></p>
					</object>
				</div>
</div>
<div class="modal-footer">
  <button class="btn btn-primary"
          data-ng-click="modalOptions.ok();">{{modalOptions.actionButtonText}}</button>
</div>
</div>
</script>
<!-- End Modal Template -->
